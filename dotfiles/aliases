# rerun last command as sudo
alias please='sudo $(fc -ln -1)'

alias ll='ls -AlFh'
alias la='ls -A'
alias l='ls -CF'

alias .....='cd ../../../..'
alias ....='cd ../../..'
alias ...='cd ../..'
alias ..='cd ..'

alias .....l='cd ../../../..; l'
alias ....l='cd ../../..; l'
alias ...l='cd ../..; l'
alias ..l='cd ..; l'

# "spell-checker aliases
alias cd..="cd .."

# cd into folder and display contents
cdl () { cd $1; l; }

# open a file with default program
op () { 'xdg-open' $1; }

# make dir and cd into it
mkcd() {
        if [ $# != 1 ]; then
                echo "Usage: mkcd <dir>"
        else
                mkdir -p $1 && cd $1
        fi
}

